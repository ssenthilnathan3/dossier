# Production Environment Configuration

# Database
POSTGRES_PASSWORD=your_secure_postgres_password_here

# Frappe Integration
FRAPPE_URL=https://your-frappe-instance.com
FRAPPE_API_KEY=your_frappe_api_key
FRAPPE_API_SECRET=your_frappe_api_secret

# Webhook Security
WEBHOOK_SECRET=your_webhook_secret_key

# Logging
LOG_LEVEL=info

# Service Configuration
INGESTION_BATCH_SIZE=50
INGESTION_MAX_WORKERS=4
EMBEDDING_BATCH_SIZE=32
EMBEDDING_MODEL=all-MiniLM-L6-v2
SEARCH_TOP_K=10

# LLM Configuration
DEFAULT_MODEL=llama3.2
LLM_RESPONSE_TIMEOUT=120
OLLAMA_KEEP_ALIVE=5m
OLLAMA_NUM_PARALLEL=1

# Frontend Configuration
FRONTEND_API_URL=http://localhost:8003
FRONTEND_WS_URL=ws://localhost:8004

# Optional: External URLs for production deployment
# FRONTEND_API_URL=https://api.yourdomain.com
# FRONTEND_WS_URL=wss://ws.yourdomain.com